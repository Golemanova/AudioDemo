<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AudioM">

    <Button
        android:text="vibrate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vibrate_button"/>

    <Button
        android:text="ring"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ring_button"/>

    <Button
        android:text="silent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/silent_button"/>

    <Button
        android:text="What's the mode?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/get_mode__button"/>

    <Button
        android:text="ring up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/plus_button"/>

    <Button
        android:text="ring down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/minus_button"/>

    <Button
        android:text="current stream up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/stream_up_button"/>

    <Button
        android:text="current stream down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/stream_down_button"/>

    <Button
        android:text="set stream volume to max"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/set_stream_button"/>

    <Button
        android:text="is music active?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/headset_button"/>




</LinearLayout>
